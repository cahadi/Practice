<Page x:Class="Учебная_часть.View.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Учебная_часть.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      
      Title="WelcomePage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Image HorizontalAlignment="Right" Margin="0 0 20 50" Source="/Image/PPKw.png" Width="250"/>
        <StackPanel Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Label FontSize="70"  Content="Вас приветствует"/>
            <Label FontSize="70"   Content="компания PPK"/>
        </StackPanel>
        <Label FontSize="35" Margin="0 250 0 0" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Похоже, вы заинтересованы нашей продукцией"/>
    </Grid>
</Page>
